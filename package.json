{
  "name": "wheelhouse",
  "version": "1.19.37",
  "description": "Wheel Strategy Options Analyzer - Monte Carlo-based options pricing and position tracking",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "start:web": "node server.js",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.8.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.wheelhouse.app",
    "productName": "WheelHouse",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**",
      "!.git/**",
      "!.env"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "options",
    "trading",
    "wheel-strategy",
    "monte-carlo",
    "black-scholes",
    "options-pricing"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gregtee2/WheelHouse.git"
  }
}
